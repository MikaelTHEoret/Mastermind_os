# AI Provider API Keys
VITE_OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Provider Configuration
VITE_AI_PROVIDER=ollama
VITE_AI_MODEL=llama2:latest
VITE_AI_FALLBACK_PROVIDER=ollama
VITE_AI_FALLBACK_MODEL=llama2:latest

# Ollama Configuration
VITE_OLLAMA_HOST=http://localhost:11434
VITE_OLLAMA_MODEL=llama2:latest
VITE_OLLAMA_TIMEOUT=30000
VITE_OLLAMA_CHECK_INTERVAL=30000

# Memory System Configuration
MEMORY_SUMMARIZATION_THRESHOLD=10
MEMORY_RELEVANCE_THRESHOLD=0.7
MEMORY_MAX_CONTEXT_MEMORIES=5

# Database Configuration
VITE_DATABASE_URL=local://data
VITE_DATABASE_TYPE=sqlite

# Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_API_IMPL=rest # or 'http'
CHROMA_API_KEY=your-chroma-api-key-here # if using authentication

# Embedding Configuration (disabled by default - enable by setting EMBEDDING_PROVIDER)
# EMBEDDING_PROVIDER=local # Use local embeddings with Ollama
# EMBEDDING_BATCH_SIZE=512
