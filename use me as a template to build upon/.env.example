# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral # or llama2, codellama, etc.
OLLAMA_TIMEOUT=30000 # Connection timeout in milliseconds
OLLAMA_CHECK_INTERVAL=30000 # Health check interval in milliseconds

# Memory System Configuration
MEMORY_SUMMARIZATION_THRESHOLD=10
MEMORY_RELEVANCE_THRESHOLD=0.7
MEMORY_MAX_CONTEXT_MEMORIES=5

# Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_API_IMPL=rest # or 'http'
CHROMA_API_KEY=your-chroma-api-key-here # if using authentication

# Embedding Configuration
EMBEDDING_PROVIDER=openai # or 'local' for fallback to local embeddings
EMBEDDING_MODEL=text-embedding-ada-002 # OpenAI model for embeddings
EMBEDDING_BATCH_SIZE=512
